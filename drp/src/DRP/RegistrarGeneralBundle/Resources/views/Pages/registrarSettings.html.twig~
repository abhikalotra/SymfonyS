<script>
function updateInfo()
{

	if($("#fstname").val()=="")
	{
		
		$("#fname").html('This field is requierd');
		return false;
	}
	else
	{
		$("#fname").html(' ');

	}	
	 if($("#lstname").val()=="")
	{
		
		$("#lname").html('This field is requierd');
		return false;
	}
	else
	{
		$("#lname").html(' ');

	}	

	if ($("#emailN").val()=="")
	{
		
		$("#email").html('This field is requierd');
		return false;
	}
	else
	{
		$("#email").html(' ');

	}	

	var data = $("form").serialize();
	$.ajax({
               	url : '{{ path("registrarGeneral_updateRegistrarInfo") }}',
                type:'POST',
                data:'email='+data,
                dataType:'html',   
                success:function(data){
                 	location.reload();
}
            });	
}

		function showimagepreview(input) 
		{
			if (input.files && input.files[0]) 
			{
				var filerdr = new FileReader();
				filerdr.onload = function(e) 
				{
					$('#imgprvw').attr('src', e.target.result);
					$('#changeFile').html('');
				}
				filerdr.readAsDataURL(input.files[0]);
			}
					


		}
	function updateImage(id)
	{
		var fileName = $('#regFile').val();
		
		

		if(fileName == "")
		{
			$('#changeFile').html('Please select differrent file');
			document.getElementById('changeFile').style.color = 'red';
		}
		
		
		var formData = new FormData();
		formData.append('file', $('input[type=file]')[0].files[0]);
		$.ajax({
		url: "{{ path("registrarGeneral_updateRegistrarImage") }}", // Url to which the request is send
		type: "POST",             // Type of request to be send, called as method
		 data:formData,
		async: false,		 // Data sent to server, a set of key/value pairs (i.e. form fields and values)
		contentType: false,       // The content type used when sending data to the server.
		cache: false,             // To unable request pages to be cached
		processData:false,        // To send DOMDocument or non processed data file it is set to false
		success: function(data)   // A function to be called if request succeeds
		{
			location.reload();
		}
		});
	}

	function changePassword()
	{
		
		 if($("#newPassword").val() == "")
		 {
			
			$("#empty").html('This field is requierd');
			return false;

					
		 }

		else 
		 {
			
			$("#empty").html(' ');
			

					
		 }

		


		var formData = $('#frmChangePassword').serialize();
		$.ajax({
	  		url: '{{ path("registrarGeneral_changePassword") }}',
	  		type: 'POST',
	  		data: formData,
	  		success:function(result)
	  		{
				if( result == 'OLD_MISMATCH' )
				{
					$("#divFlashMessage").removeClass('msgSuccess');
					$("#divFlashMessage").addClass('msgError');
					$("#divFlashMessage").html("The Current Password entered by you is wrong.");
					$("#oldPassword").focus();
					return false;
				}
				


				else if( result == 'NEW_MISMATCH' )
				{
					$("#divFlashMessage").removeClass('msgSuccess');
					$("#divFlashMessage").addClass('msgError');
					$("#divFlashMessage").html("The password does not match.");
					$("#repeatPassword").focus();
					return false;
				}
				else
				{
					$("#divFlashMessage").removeClass('msgError');
					$("#divFlashMessage").addClass('msgSuccess');
					$("#divFlashMessage").html("Your password has been changed successfully.");
					location.reload();
				}
	  		}
	  	});
}
</script>
