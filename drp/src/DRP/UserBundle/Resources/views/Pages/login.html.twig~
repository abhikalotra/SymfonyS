<script>
function form()
{
	$('#showForm').css("width","86%");
}
function backButton()
{
	$('#showForm').css("width","400px");
}
function submit()
{
document.getElementById("submit_form").submit();	
}

function checkEmail(email)
{
	
	$.ajax({
               url : '{{ path("user_checkEmail") }}',
                type:'POST',
                data:'email='+email,
                dataType:'html',   
                success:function(data){
			alert(data);

                 	if(data == 'SUCCESS')
			{
				var data = 'Email Exists'				
				$('#emailExists').html(data);
				$('a').attr( 'disabled', 'true' );
							
			}
			else
			{

				$('#emailExists').html('');
				$('a').attr( 'disabled', false );
			}
                 
}
            });

}


function forgotPassword()
{
var email = $("#email").val();	
	$.ajax({
               	url : '{{ path("user_forgotPassword") }}',
                type:'POST',
                data:'email='+email,
                dataType:'html',   
                success:function(data){
                 	if(data == 'SUCCESS')
			{
				window.location.href ='{{ path('user_resetPassword') }}';	          	
			}
			else
			{
				var data = 'Invalid Email'
				$('#error').html(data);
		            	document.getElementById('error').style.color = 'red';
			}
                 
}
            });
}
function showimagepreview(input) 
		{
			if (input.files && input.files[0]) 
			{
				var filerdr = new FileReader();
				filerdr.onload = function(e) 
				{
					$('#imgprvw').attr('src', e.target.result);
				}
				filerdr.readAsDataURL(input.files[0]);
			}
					


		}
</script>


