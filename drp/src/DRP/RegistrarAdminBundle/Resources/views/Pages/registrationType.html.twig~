<script>
function addRegistrationType()
{
	window.location.href = "{{ path('registrarAdmin_addRegistrationType') }}";
}
function showDeleteBox(url)
{
	$("#divDelete").show();
	$("#btnDel").attr('href',url);
}
function cancel()
{
	$("#divDelete").hide();
}
function changeStatus(id, currentStatus)
	{
		var arrId = id.split('-');
		id = arrId[1];
		$.ajax({
	   		 url: '{{ path("registrarAdmin_changeStatus") }}',
	   		 type: 'POST',
	   		 data: {id:id, currentStatus:currentStatus, objectType:'RType'},
	   		 success:function(updatedStatus)
	   		 {
				$("#divStatus-"+id).html(updatedStatus);
	   		 }
	   	});
	}
</script>



